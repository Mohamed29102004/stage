{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block main %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1>Lise des articles</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table listArticle">
        <thead>
            <tr>
                <th>Id</th>
                <th>Auteur</th>
                <th>Nom</th>
                <th>PublicationAt</th>
                <th>Descriptif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.Auteur }}</td>
                <td>{{ article.Nom }}</td>
                <td>{{ article.PublicationAt ? article.PublicationAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ article.Descriptif }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary btn-lg">Montrer</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-primary btn-lg">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'article trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>
</div>


    <a href="{{ path('app_article_new') }}" class="btn btn-primary btn-lg">Ajouter un article</a>
{% endblock %}
