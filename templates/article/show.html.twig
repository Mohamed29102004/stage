{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block main %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Article</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table listArticle">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ article.id }}</td>
                    </tr>
                    <tr>
                        <th>Auteur</th>
                        <td>{{ article.Auteur }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ article.Nom }}</td>
                    </tr>
                    <tr>
                        <th>PublicationAt</th>
                        <td>{{ article.PublicationAt ? article.PublicationAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Descriptif</th>
                        <td>{{ article.Descriptif }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
    <a href="{{ path('app_article_index') }}" class="btn btn-primary btn-lg">Retour</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-primary btn-lg">Modifier</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
