                            <a class="nav-link active" aria-current="page" href="{{path('app_admin_dashboard_index')}}"><strong>SE CONNECTER</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{path('app_logout')}}"><strong>SE DECONNECTER</strong></a>
                        </li>
                    </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}
